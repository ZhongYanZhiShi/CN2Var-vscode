// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript Build",
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "-p",
        "."
      ],
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ],
      "isBackground": false
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "-watch",
        "-p",
        "."
      ],
      "group": "build",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "isBackground": true
    }
  ]
}
